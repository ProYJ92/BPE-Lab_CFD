{
  "env": {
    "browser": true,
    "node": true,
    "es2021": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "globals": {
    "lucide": "readonly",
    "Papa": "readonly",
    "XLSX": "readonly"
  },
  "rules": {
    "no-inner-declarations": "off",
    "no-unused-vars": "warn"
  }
}
